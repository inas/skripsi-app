<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:textColor">@color/dark_primary</item>
    </style>

    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/rubikRegular.ttf</item>
    </style>

    <!--  Font styles  -->
    <style name="font_title">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:textSize">@dimen/text_26sp</item>
    </style>

    <style name="font_title_bold" parent="font_title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_heading">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_18sp</item>
    </style>

    <style name="font_heading.bold">
        <item name="fontPath">fonts/rubikMedium.ttf</item>
    </style>

    <style name="font_normal">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="lineHeight">@dimen/text_22sp</item>
    </style>

    <style name="font_normal.bold">
        <item name="android:textStyle">bold</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
    </style>

    <style name="font_small">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_12sp</item>
    </style>

    <style name="font_xsmall">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_11sp</item>
    </style>

    <style name="font_small.secondary">
        <item name="android:textColor">@color/dark_secondary</item>
    </style>

    <style name="font_small.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Button styles  -->
    <style name="button_dash">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_border_dash</item>
    </style>


    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
    </style>

    <style name="button_siklus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_max">150dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
    </style>

    <style name="button_full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_fill">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_rounded_slightly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="cornerRadius">@dimen/radius_small</item>
    </style>

    <style name="button_rounded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/radius_big</item>
    </style>

    <style name="button_text" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Outlined.Toggle">
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="lineHeight">@dimen/text_22sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--  Chip styles  -->

    <style name="chip">
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipCornerRadius">@dimen/radius_small</item>
        <item name="android:textAppearance">@style/font_normal</item>
        <item name="chipStrokeWidth">@dimen/common_1dp</item>
        <item name="android:textColor">@color/dark_primary</item>
        <item name="fontPath">fonts/rubikMedium.ttf</item>
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="chip_selected" parent="chip">
        <item name="chipBackgroundColor">@color/yellow</item>
        <item name="chipStrokeColor">@color/yellow</item>
    </style>

    <style name="chip_not_selected" parent="chip">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/dark_secondary</item>
    </style>

    <style name="chip_selected_wide" parent="chip_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="layout_constraintWidth_max">150dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="chip_not_selected_wide" parent="chip_not_selected">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="layout_constraintWidth_max">150dp</item>
        <item name="android:textAlignment">center</item>
        <item name="chipStrokeWidth">2.5dp</item>
    </style>

    <!--  Switch style  -->
    <style name="switch_green" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/green</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">#C8221F1F</item>
    </style>

    <!--  Dialog style  -->
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="colorAccent">@color/pink</item>
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
        <item name="android:textColor">@color/dark_primary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--  Input layout style  -->
    <style name="InputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintEnabled">true</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
        <item name="fontPath">fonts/rubikRegular.ttf</item>
    </style>

    <!--  Tab layout style  -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="fontPath">fonts/rubikRegular.ttf</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
