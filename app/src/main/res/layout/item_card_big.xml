<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="inas.anisha.skripsi_app.ui.kelolapembelajaran.TargetViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_8dp">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radiobutton_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{viewModel.isSelected}"
            android:clickable="false"
            android:visibility="@{viewModel.shouldShowSelection? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/imageview_target"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_target" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_target"
            android:layout_width="0dp"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/bg_rounded_pink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/radiobutton_selection"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dateString}"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/textview_target"
            app:layout_constraintStart_toStartOf="@id/textview_target"
            tools:text="2020" />

        <TextView
            android:id="@+id/textview_target"
            style="@style/font_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24dp"
            android:layout_marginBottom="@dimen/space_4dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="@{viewModel.name}"
            app:layout_constraintBottom_toTopOf="@id/textview_target_description"
            app:layout_constraintStart_toStartOf="@id/textview_target_description"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Rutin belajar mandiri shhshs shhshs hshsh shhhs shhs" />

        <TextView
            android:id="@+id/textview_target_description"
            style="@style/font_normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_24dp"
            android:layout_marginEnd="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_16dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:text="@{viewModel.note}"
            app:layout_constraintBottom_toBottomOf="@id/imageview_target"
            app:layout_constraintEnd_toEndOf="@id/imageview_target"
            app:layout_constraintStart_toStartOf="@id/imageview_target"
            tools:text="Buat sesi khusus untuk belajar mandir shhshs shhshs shsh" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_12dp"
            android:src="@drawable/ic_edit"
            android:tint="@color/white"
            android:visibility="@{viewModel.isEditable? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
