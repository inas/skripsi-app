<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_title"
        style="@style/font_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atur Siklus Belajar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_description"
        style="@style/font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_title" />

    <TextView
        android:id="@+id/textview_choose_cycle"
        style="@style/font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_32dp"
        android:text="Pilih jangka waktu siklus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_description" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cycle_1"
        style="@style/button_selected"
        android:layout_marginTop="@dimen/space_16dp"
        android:layout_marginBottom="@dimen/common_4dp"
        android:text="Mingguan"
        app:layout_constraintEnd_toStartOf="@id/button_cycle_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_choose_cycle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cycle_2"
        style="@style/font_normal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16dp"
        android:background="@drawable/bg_border_solid_dark"
        android:text="2 Mingguan"
        android:textAllCaps="false"
        android:textColor="@color/dark_primary"
        app:layout_constraintBottom_toBottomOf="@id/button_cycle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_cycle_1"
        app:layout_constraintTop_toTopOf="@id/button_cycle_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cycle_3"
        style="@style/font_normal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:background="@drawable/bg_border_solid_dark"
        android:text="Mingguan"
        android:textAllCaps="false"
        android:textColor="@color/dark_primary"
        app:layout_constraintEnd_toEndOf="@id/button_cycle_1"
        app:layout_constraintStart_toStartOf="@id/button_cycle_1"
        app:layout_constraintTop_toBottomOf="@id/button_cycle_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cycle_4"
        style="@style/font_normal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_solid_dark"
        android:text="Mingguan"
        android:textAllCaps="false"
        android:textColor="@color/dark_primary"
        app:layout_constraintEnd_toEndOf="@id/button_cycle_2"
        app:layout_constraintStart_toStartOf="@id/button_cycle_2"
        app:layout_constraintTop_toTopOf="@id/button_cycle_3" />

    <TextView
        style="@style/font_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:text="Atur waktu sendiri"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_cycle_3" />
</androidx.constraintlayout.widget.ConstraintLayout>

